@model FitnessTech.ViewModels.WorkoutTypeViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container">

    <hr />
    <div class="row ">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <h2 style="text-align: center">Create</h2>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="WorkoutTypeName" class="control-label"></label>
                    <input asp-for="WorkoutTypeName" class="form-control"/>
                    <span asp-validation-for="WorkoutTypeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkoutTypeDescription" class="control-label"></label>
                    <input asp-for="WorkoutTypeDescription" class="form-control"/>
                    <span asp-validation-for="WorkoutTypeDescription" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}