@model FitnessTech.Models.WorkoutProgram

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="well">
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.WorkoutProgramName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WorkoutProgramName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.WorkoutProgramDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WorkoutProgramDescription)
        </dd>
        @{
            foreach (var workout in Model.WorkoutAssigments)
            {
                <dt>Body part</dt>
                <dd>@workout.Workout.WorkoutName </dd>
                <dt>Exercises</dt>
                foreach (var exercise in workout.Workout.ExerciseAssigments)
                {
                    <dd> @exercise.Exercise.ExerciseName </dd>
                }
                <br />
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.WorkoutProgramId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
