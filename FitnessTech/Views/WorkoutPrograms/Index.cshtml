@model FitnessTech.ViewModels.WorkoutProgramIndexData
@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{

    <div class="input-group">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Search</button>
        </span>
        @Html.TextBox("SearchString", null, new { @class = "form-control" })
    </div>
}
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["WPNameSort"]">Workout Program Name</a>
            </th>
            <th>
                Workout Program Description
            </th>
            <th>
                Workouts
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkoutPrograms)
        {
            //string selectedRow = "";
            //if (item.WorkoutId == (int?)ViewData["WorkoutId"])
            //{
            //    selectedRow = "success";
            //}
            <tr @*class="@selectedRow" *@>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkoutProgramName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkoutProgramDescription)
                </td>

                <td>
                    @{
                        foreach (var workout in item.WorkoutAssigments)
                        {
                            @: @workout.Workout.WorkoutName <br/>
                        }
                    }
                </td>
                <td>
                    @*<a asp-action="Index" asp-route-id="@item.WorkoutId">Select</a> |*@
                    <a asp-action="Edit" asp-route-id="@item.WorkoutProgramId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.WorkoutProgramId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.WorkoutProgramId">Delete</a>
                </td>

            </tr>
                        }

    </tbody>
</table>
</div>