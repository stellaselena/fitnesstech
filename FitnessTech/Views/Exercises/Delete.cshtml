@model FitnessTech.ViewModels.ExerciseViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <hr/>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">
                <h2 style="text-align: center">Delete</h2>
                <p style="text-align: center">Are you sure you want to delete @Html.DisplayFor(model => model.ExerciseName) exercise?</p>
                <div class="form-group text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ExerciseId"/>
                        <input type="submit" value="Delete" class="btn btn-primary"/> |
                        <a asp-action="Index">Cancel</a>
                    </form>
                </div>

            </div>


        </div>
    </div>




</div>
