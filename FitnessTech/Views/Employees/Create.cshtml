@using FitnessTech.Data.Entities
@model FitnessTech.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2>Create</h2>
    <hr />
    <div class="row ">
        <div class="col-md-6 well">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h4>Basic Information</h4>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Birthday" class="control-label"></label>
                    <input asp-for="Birthday" class="form-control" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-control"
                            asp-items="Html.GetEnumSelectList<Gender>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <h4>Contact Information</h4>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <select asp-for="Country" class="form-control"
                            asp-items="ViewBag.Countries">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gym.GymName" class="control-label"></label>
                    <select asp-for="GymId" class="form-control" asp-items="ViewBag.GymId">
                        <option value="">-- Please Select --</option>
                    </select>
                </div>
                <h4>Education</h4>
                <div class="form-group">
                    <label asp-for="Certification" class="control-label"></label>
                    <select asp-for="Certification" class="form-control"
                            asp-items="Html.GetEnumSelectList<Certification>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Certification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specialization" class="control-label"></label>
                    <select asp-for="Specialization" class="form-control"
                            asp-items="Html.GetEnumSelectList<Specialization>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
