@using FitnessTech.Models
@model FitnessTech.Models.NutritionixIndexData
@{
    ViewData["Title"] = "SearchFood";
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <img class="img-responsive img-rounded" src="~/images/foodDbBanner.png" alt="nutrition banner"/>
        </div>
        <div class="col-md-3">
            <div class="row">
                <p class="lead">Search world's largest nutrition database </p>
                <div class="list-group">
                    @using (Html.BeginForm())
                    {
                        <div class="input-group col-md-12">
                            @Html.TextBox("SearchStringFood", null, new {@class = "form-control", @placeholder = "Food"})
                        </div>
                        <div class="input-group col-md-12">
                            @Html.TextBox("SearchStringBrand", null, new {@class = "form-control", @placeholder = "Brand"})
                        </div>
                        <div class="input-group col-md-12">
                            <p class="input-group-btn">
                                <button class="btn btn-secondary" type="submit">Search</button>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<br/>

<div class="row">
    <div class="col-lg-12">
        <div class="well text-center">
            621,299  Grocery Items	136,474  Restaurant Items	25,857  Common Foods
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

<hr/>

@if (Model.NutritionixItems.Count >= 1)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Food
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Item Type
                </th>
                <th>
                    Calories
                </th>
                <th>
                    Protein
                </th>
                <th>
                    Fats
                </th>
                <th>
                    Carbs
                </th>
                <th>
                    Sugar
                </th>
                <th>
                    Fibre
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.NutritionixItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutritionFact_Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutritionFact_Protein)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutritionFact_TotalFat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutritionFact_TotalCarbohydrate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutritionFact_Sugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NutritionFact_DietaryFiber)
                </td>

            </tr>
        }
        </tbody>
    </table>
}


