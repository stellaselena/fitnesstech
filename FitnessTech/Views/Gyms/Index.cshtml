@model FitnessTech.ViewModels.GymIndexViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h2>Index</h2>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    @using (Html.BeginForm())
    {

        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">Search</button>
            </span>
            @Html.TextBox("SearchString", null, new { @class = "form-control" })
        </div>
    }
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["GymNameSort"]">Gym Name</a>
                </th>
                <th>
                    Description
                </th>
                <th>
                    Website
                </th>
                <th>
                    Email
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CountrySort"]">Country</a>
                </th>
                <th>
                    City
                </th>
                <th>
                    PostalCode
                </th>
                <th>
                    Street
                </th>
                <th>
                    PhoneNumber
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Gyms)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GymName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Website)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GymId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.GymId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.GymId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
