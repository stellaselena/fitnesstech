@using FitnessTech.Data.Helpers
@model FitnessTech.Data.Entities.Gym

@{
    ViewData["Title"] = "Details";
}
<div class="container">
<h2> @Html.DisplayFor(model => model.GymName)</h2>
<div>

    <a asp-action="Edit" asp-route-id="@Model.GymId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.GymId">Delete</a>
</div>
<hr/>


<div id="tabs">
<div class="">
<div role="tabpanel">

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
        <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab">CONTACT</a>
    </li>
    <li role="presentation">
        <a href="#tab2" aria-controls="tab2" role="tab" data-toggle="tab">ABOUT</a>
    </li>
    <li role="presentation">
        <a href="#tab3" aria-controls="tab3" role="tab" data-toggle="tab">MEMBERS</a>
    </li>
    <li role="presentation">
        <a href="#tab4" aria-controls="tab3" role="tab" data-toggle="tab">INSTRUCTORS</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">

    <!-- Tab 1 -->
    <div role="tabpanel" class="tab-pane active" id="tab1">
        <div class="row well">
            <div class="col-md-2">
                @if (Model.AvatarImage != null)
                {
                    var base64 = Convert.ToBase64String(Model.AvatarImage);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                    <img src='@imgsrc' style="max-width: 200px; max-height: 200px" alt="image"/>
                }
                else
                {
                    <img src="~/images/gymPin2.png" style="max-width: 200px; max-height: 200px" alt="image"/>
                }
            </div>
            <div class="col-md-10">
                <br/>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Website)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Website)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Country)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Country)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.City)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.City)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Street)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Street)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PostalCode)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PostalCode)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </dl>
            </div>

        </div>
    </div>

    <!-- Tab 2 -->
    <div role="tabpanel" class="tab-pane" id="tab2">
        <div class="row well">
            @Html.DisplayFor(model => model.Description)

        </div>
    </div>

    <!-- Tab 3 -->
    <div role="tabpanel" class="tab-pane" id="tab3">
        <div class="row well">
            @if (Model.Customers.Count < 1)
            {
                <p>No members could be found</p>
            }
            <table class="table table-striped table-hover">

                <tbody>
                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>
                            <div class="col-md-3">
                                @if (item.AvatarImage != null)
                                {
                                    var base64 = Convert.ToBase64String(item.AvatarImage);
                                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                    <img src='@imgsrc' style="max-width: 100px; max-height: 100px" alt="image"/>
                                }
                                else
                                {
                                    if (item.Gender == Gender.Female)
                                    {
                                        <img src="~/images/avatar_female.png" style="max-width: 100px; max-height: 100px" alt="image"/>
                                    }
                                    else
                                    {
                                        <img src="~/images/avatar_male.png" style="max-width: 100px; max-height: 100px" alt="image"/>
                                    }
                                }

                            </div>
                            <div class="col-md-9">
                                <a asp-action="Details" asp-controller="Customers" asp-route-id="@item.Id">
                                    <h5>@Html.DisplayFor(modelItem => item.FullName)</h5>
                                </a>
                                HT:@Html.DisplayFor(modelItem => item.Height) | WT:@Html.DisplayFor(modelItem => item.Weight) KGS | BF:@Html.DisplayFor(modelItem => item.BodyFat)% | Goal: @Html.DisplayFor(modelItem => item.Goal)%
                            </div>

                        </td>


                    </tr>
                }

                </tbody>
            </table>

        </div>
    </div>

    <!-- Tab 4 -->
    <div role="tabpanel" class="tab-pane" id="tab4">
        <div class="row well">
            @if (Model.Employees.Count < 1)
            {
            <p>No instructors could be found</p>
            }
            <table class="table table-striped table-hover">

                <tbody>
                @foreach (var item in Model.Employees)
                {
                 
                    <tr>
                        <td>
                            <div class="col-md-3">
                                @if (item.AvatarImage != null)
                                {
                                    var base64 = Convert.ToBase64String(item.AvatarImage);
                                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                    <img src='@imgsrc' style="max-width: 100px; max-height: 100px" alt="image"/>
                                }
                                else
                                {
                                    if (item.Gender == Gender.Female)
                                    {
                                        <img src="~/images/avatar_female.png" style="max-width: 100px; max-height: 100px" alt="image"/>
                                    }
                                    else
                                    {
                                        <img src="~/images/avatar_male.png" style="max-width: 100px; max-height: 100px" alt="image"/>
                                    }
                                }

                            </div>
                            <div class="col-md-9">
                                <a asp-action="Details" asp-controller="Employees" asp-route-id="@item.Id">
                                    <h5>@Html.DisplayFor(modelItem => item.FullName)</h5>
                                </a>
                                <p>@Html.DisplayFor(modelItem => item.Certification) | @Html.DisplayFor(modelItem => item.Specialization)</p>
                            </div>

                        </td>


                    </tr>
                }

                        </tbody>
                    </table>

                </div>
            </div>

        </div>
        <!-- Tab content -->
    </div>
</div>
</div>
<!-- /.collapse -->

</div>


